{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx", // No need to import react on every file if react-jsx is used
    "strict": true,
    "noEmit": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "setup.ts"],
  "exclude": ["node_modules"]
}
